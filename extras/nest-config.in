#! /bin/sh

prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}

usage()
{
    cat <<EOF
Usage: nest-config [OPTION]

Known values for OPTION are:

  --prefix              NEST install prefix for architecture-independent files
  --exec-prefix         NEST install prefix for architecture-dependent files
  --libs                print library linking information
  --cflags              print pre-processor and compiler flags
  --includes            print includes
  --compiler            print the compiler used to compile NEST
  --static-libraries    print "ON" if configured for static libraries, "OFF" otherwise
  --docdir              print the directory with installed documentation
  --datadir             print the directory with installed data
  --libdir              print the directory with installed libraries
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
        prefix=$optarg
        ;;

    --prefix)
        echo $prefix
        ;;

    --exec-prefix)
        echo $exec_prefix
        ;;

    --version)
        echo @NEST_VERSION_VERSION@
        exit 0
        ;;

    --help)
        usage 0
        ;;

    --includes)
        NEST_INCLUDES="@ALL_INCLUDES@"
        if [ "@PROJECT_BINARY_DIR@" != "@PROJECT_SOURCE_DIR@" ]; then
            NEST_CFLAGS="-I@PROJECT_BINARY_DIR@/libnestutil $NEST_INCLUDES"
        fi
        echo $NEST_INCLUDES
        ;;

    --cflags)
        NEST_CFLAGS="@ALL_CXXFLAGS@"
        echo $NEST_CFLAGS
        ;;

    --libs)
        NEST_LDFLAGS="@ALL_LIBS@"
        # cmake: all libs are installed
        NEST_LDFLAGS="-L@CMAKE_INSTALL_FULL_LIBDIR@ $NEST_LDFLAGS"
        echo $NEST_LDFLAGS
        ;;
    --compiler)
        echo "@CMAKE_CXX_COMPILER@"
        ;;

    --static-libraries)
        echo "@static-libraries@"
        ;;
    --docdir)
        echo "@CMAKE_INSTALL_DOCDIR@"
        ;;
    --datadir)
        echo "@CMAKE_INSTALL_DATADIR@"
        ;;
    --libdir)
        echo "@CMAKE_INSTALL_LIBDIR@"
        ;;
    *)
        usage
        exit 1
        ;;
    esac
    shift
done

exit 0
